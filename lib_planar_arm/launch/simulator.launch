<launch>
    <arg name="model" default="$(find lib_planar_arm )/urdf/robot_arm.urdf"/>
    <arg name="gui" default="true" />
    <arg name="rvizconfig" default="$(find lib_planar_arm )/rviz/urdf.rviz" />

    <param name="robot_description" textfile="$(find lib_planar_arm )/urdf/robot_arm.urdf" />
    <param name="use_gui" value="$(arg gui)"/>

    <node name="control_planar_arm" pkg="lib_planar_arm" type="controlPlanarArm.py" 
        output="screen"/>

    <!-- <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" /> -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
</launch>