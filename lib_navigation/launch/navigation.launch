<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find lib_bringup)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find lib_navigation)/launch/amcl.launch">
    <!-- <arg name="initial_pose_x"  value="-2.0" />
    <arg name="initial_pose_y"  value="0.5" />
    <arg name="initial_pose_a"  value="1.5708" /> -->
  </include>

  <!-- move_base -->
  <include file="$(find lib_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find lib_navigation)/rviz/lib_navigation.rviz" output="screen"/>
  </group>
</launch>